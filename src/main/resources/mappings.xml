<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">
	<configuration>
		<custom-converters>
			<converter type="cz.zcu.kiv.pia.kivbook.service.util.LocalDateToLocalDateConverter">
				<class-a>java.time.LocalDate</class-a>
				<class-b>java.time.LocalDate</class-b>
			</converter>
			<converter type="cz.zcu.kiv.pia.kivbook.service.util.StringToLocalDateConverter">
				<class-a>java.lang.String</class-a>
				<class-b>java.time.LocalDate</class-b>
			</converter>
			<converter type="cz.zcu.kiv.pia.kivbook.service.util.InstantToInstantConverter">
				<class-a>java.time.Instant</class-a>
				<class-b>java.time.Instant</class-b>
			</converter>
		</custom-converters>
	</configuration>
</mappings>